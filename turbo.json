{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["ENV_FILE"]
    },
    "test": {
      "dependsOn": ["^test", "transit", "@repo/vitest-config#build"],
      "outputs": ["coverage.json"]
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "gen/**"],
      "env": ["ENV_FILE"]
    },
    "lint": {
      "dependsOn": ["lint:code", "lint:styles"]
    },
    "lint:code": {
      "dependsOn": []
    },
    "lint:styles": {
      "dependsOn": []
    },
    "//#lint:styles": {
      "dependsOn": []
    },
    "lint:fix": {
      "dependsOn": ["lint:code:fix", "lint:styles:fix"]
    },
    "lint:code:fix": {
      "dependsOn": []
    },
    "lint:styles:fix": {
      "dependsOn": []
    },
    "//#lint:styles:fix": {
      "dependsOn": []
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
